@{
    ViewData["Title"] = "Add student";
}

@model StudentPortal.Models.AddStudentViewModel


<form action="" method="post">

    <div class="card p-5">
        <h1 class="display-4">Add student</h1>

        <div>
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" required/>
        </div>

        <div>
            <label class="form-label">Email</label>
            <input type="Email" class="form-control" asp-for="Email" />
        </div>

        <div>
            <label class="form-label">Phone</label>
            <input type="number" class="form-control" asp-for="Phone" />
        </div>

        <div>
            <input type="checkbox" class="form-check-input" id="Subscribed" value="" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed">Subscribed</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-controller="Students" asp-action="List" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>
