@{
    ViewData["Title"] = "Edit student";
}

@model StudentPortal.Models.Entities.Student

@if (Model is null)
{
    <p>No student was found with such Id</p>
}
else
{
    
<form asp-controller="Students" method="post">

    <div class="card p-5">
        <h1 class="display-4">Edit student</h1>

        <div>
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" required/>
        </div>

        <div>
            <label class="form-label">Email</label>
            <input type="Email" class="form-control" asp-for="Email" />
        </div>

        <div>
            <label class="form-label">Phone</label>
            <input type="number" class="form-control" asp-for="Phone" />
        </div>

        <div>
                <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed">Subscribed</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Save</button>
            @* <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Students"  asp-for="Id">Delete</button> *@

        </div>
    </div>
</form>

}
